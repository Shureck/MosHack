<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MosHack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BigButtonThemeActive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/main_blue</item>
        <item name="android:disabledAlpha">1</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="SmallButtonThemeInactive" parent="Theme.MosHack">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="cornerRadius">36dp</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:disabledAlpha">1</item>
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BigButtonThemeInactive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:disabledAlpha">1</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Theme.MosHack.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MosHack.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MosHack.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>